cp libros.txt libross
libroaut=$(cat  libross | cut -d: -f4)
echo $libroaut>>librois
libroaut2=$(cat  librois)
tput cup 9 13; echo "Autor:"
tput cup 9 25; echo "$libroaut2"
rm libross
rm librois

touch libross
cp libros.txt libross
libroasig=$(cat  libross | cut -d: -f5)
echo $libroasig>>librois
libroasig2=$(cat  librois)
tput cup 11 13; echo "Asignatura:"
tput cup 11 25; echo "$libroasig2"
rm libross
rm librois
fi




