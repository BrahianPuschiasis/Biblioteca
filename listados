case $opcion in
0) clear ;;

1)
clear
tput cup 3 13;echo "Libros para prestamo:"
if test -e libros.txt
then
touch libross
cp libros.txt libross
librois=$(cat  libross | cut -d: -f2)
echo $librois>>librois
librois2=$(cat  librois)
tput cup 5 13; echo "ISBN:"
tput cup 5 25; echo "$librois2"

rm libross
rm librois

touch libross
cp libros.txt libross
librotit=$(cat  libross | cut -d: -f3)
echo $librotit>>librois
librotit2=$(cat  librois)
tput cup 7 13; echo "Titulo:"
tput cup 7 25; echo "$librotit2"
rm libross
rm librois

